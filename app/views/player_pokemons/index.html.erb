<p id="notice"><%= notice %></p>

<h1>Players x Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Player Name</th>
      <th>Pokemon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playerpokemons.each do |playerpokemon| %>
      <tr>
        <td><%= playerpokemon.player.name %></td>
        <td><%= playerpokemon.pokemon.name %></td>
        <td><%= link_to 'Show', playerpokemon %></td>
        <td><%= link_to 'Destroy', playerpokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to 'Back', root_path %>
</p>
